<h1>Edit Invoice <%= @discount.id %></h1>

<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch do |f| %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, value: @discount.percentage %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, value: @discount.quantity_threshold %>
  <%= f.submit "Update Discount" %>
<% end %>